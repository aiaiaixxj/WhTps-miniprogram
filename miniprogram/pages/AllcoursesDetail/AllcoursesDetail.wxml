<view class="container" style="">
	<view class="title_item" style="">
		<view style="font-size:14px;word-break:break-all;margin:10px 10px"> {{detail.name}} </view>
	</view>
	<view class="" style="top:50px">
		<video bindtimeupdate="timeUpdate"  initial-time='{{detail.studytime}}' binderror="videoErrorCallback"  show-progress="{{false}}" controls="{{true}}" enable-progress-gesture="{{false}}" src=" {{detail.path}}" style="width:92vw"></video>
	</view>
	
	<view style="display:flex;flex-direction:column ;align-items: flex-start;width:92vw">
		<view style="font-size:14px;margin:8px 0px;">课程教师： {{detail.teacher}} </view>
		<view style="font-size:14px;margin:8px 0px;">课程分类： 新增课程 </view>
		<view style="font-size:14px;margin:8px 0px;">课程学时：{{detail.time}} </view>
		<view style="font-size:14px;margin:8px 0px;">学习进度： {{detail.progress}} </view>
		<view style="font-size:14px;margin:8px 0px;">课程简介：{{detail.absract}} </view>
	</view>
</view>